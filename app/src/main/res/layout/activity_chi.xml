<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customer_color_gradient"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/line1_page10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_title"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/khoanchi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Nhóm khoản chi"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10px"
            android:background="#ffff"/>

        <TextView
            android:id="@+id/khoanthu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Nhóm khoản Thu"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:gravity="center"
            android:padding="10px"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/listviewChi"
        android:layout_width="409dp"
        android:layout_height="665dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1_page10" />

</androidx.constraintlayout.widget.ConstraintLayout>